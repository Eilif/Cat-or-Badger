!!! 5

%html
  %head
    %title It's MF'ing on!
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag

  %body
    - [:notice, :error, :alert].each do |key|
      - unless flash[key].blank?
        %p { :class => "flash #{key}" }= flash[key] 
    #nav
      %ul
        - if current_user
          %li= link_to 'log out', destroy_user_session_path
        - else
          %li= link_to "sign up", new_user_registration_path
          %li= link_to "sign in", user_session_path
        %li= link_to "Contender Stable", animals_path
        %li= link_to "Battle Record", battles_path
        %li= link_to "About", root_path
      %h1 Cat or Badger!
      .clear
    = yield
