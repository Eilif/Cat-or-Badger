= form_for @user, :html => { :multipart => true } do |form|

  %p
    Change your avatar image?
    = form.file_field :image
  %p
    = form.label :email
    = form.text_field :email
  %p
    = form.label :signature_quote
    = form.text_field :signature_quote
  %p
    = form.label :bio
    = form.text_area :bio
  %p
    = form.submit "update user profile"
