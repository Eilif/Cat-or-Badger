%h3 Edit your profile #{ resource_name.to_s.humanize }

= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :multipart => :true }) do |form|
  = devise_error_messages!

  %p
    Change your avatar image?
    = form.file_field :image
  %p
    = form.label :email
    = form.text_field :email
  %p
    leave field blank to keep old password
    = form.label :password
    = form.password_field :password
  %p
    but confirm new password if you make change
    = form.label :password_confirmation
    = form.password_field :password_confirmation
  %p
    = form.label :signature_quote
    = form.text_field :signature_quote
  %p
    = form.label :bio
    = form.text_area :bio
  %p
    please enter your current password to confirm changes
    = form.label :current_password
    = form.password_field :current_password
  %p
    = form.submit "update user profile"
OR

%h3 Cancel my account

%p Unhappy? #{ link_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete }

%p= link_to "Back", :back
